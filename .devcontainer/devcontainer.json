{
  "name": "ZMK Development",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "ZMK_URL": "https://github.com/zmkfirmware/zmk.git",
      "ZMK_BRANCH": "main",
      "ZMK_PATH": "/zmk"
    }
  },
  "runArgs": ["--security-opt", "label=disable"],
  "workspaceMount": "source=${localWorkspaceFolder},target=/zmk/zmk-config,type=bind",
  "workspaceFolder": "/zmk/zmk-config",
  "updateContentCommand": "cd $ZMK_PATH && git fetch --depth=1 && git checkout HEAD",
  "containerEnv": {
        "PROMPT_COMMAND": "history -a",
        "WORKPACE_PATH": "${containerWorkspaceFolder}",
        "ZMK_PATH": "/zmk"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "spadin.zmk-tools"
      ], 
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}
  